// Write a program to compute the sum of n natural numbers

#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>

int sum;

void *runner(void *param);

int main(int argc, char *argv[])
{
    pthread_t tid;

    if (argc < 2) {
        printf("Usage: %s <integer value>\n", argv[0]);
        return -1;
    }

    pthread_create(&tid, NULL, runner, argv[1]);
    pthread_join(tid, NULL);

    printf("Sum = %d\n", sum);

    return 0;
}

void *runner(void *param)
{
    int i, upper = atoi(param);
    sum = 0;

    for (i = 1; i <= upper; i++)
        sum += i;

    pthread_exit(0);
}
